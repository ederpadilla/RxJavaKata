<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.example.rxjavasamples">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:name=".App"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true"
            tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".retrofit.ui.RetrofitSampleActivity">
        </activity>
        <activity android:name=".rxbinding.RxBindingActivity">
        </activity>
        <activity android:name=".subjects.SubjectsActivity">
        </activity>
        <activity android:name=".operators.OperatorsActivity">
        </activity>
        <activity android:name=".MainActivity">
        </activity>
        <activity
                android:name="com.example.androidtutz.todolistapp.AddToDoActivity"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name="com.example.androidtutz.todolistapp.ToDoMainActivity"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name=".movies.view.MoviesActivity">
        </activity>
        <activity
                android:name=".movies.view.MovieActivity"
                android:label="@string/title_activity_movie"
                android:parentActivityName=".movies.view.MoviesActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".movies.view.MoviesActivity" />
        </activity>

        <activity
                android:name=".room.ui.ContactsActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>